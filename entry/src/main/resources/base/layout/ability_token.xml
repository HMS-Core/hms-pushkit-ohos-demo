<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_token"
        ohos:height="300vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_token"
        ohos:layout_alignment="top"
        ohos:text="Please start your show."
        ohos:text_size="50"
        ohos:multiple_lines="true"
        ohos:max_text_lines="1000"
        ohos:scrollable="true"
        ohos:text_cursor_visible="true"
        ohos:focusable="focus_enable"/>

    <TableLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#87CEEB"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="8vp"
        ohos:row_count="4"
        ohos:column_count="2"
        ohos:alignment_type="align_contents">
    <Button
        ohos:id="$+id:getId"
        ohos:width="150vp"
        ohos:height="60vp"
        ohos:bottom_margin="3vp"
        ohos:left_margin="13vp"
        ohos:background_element="$graphic:color_cyan_element"
        ohos:text="getId"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:deleteId"
        ohos:width="150vp"
        ohos:height="60vp"
        ohos:bottom_margin="3vp"
        ohos:left_margin="13vp"
        ohos:background_element="$graphic:color_cyan_element"
        ohos:text="deleteId"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:getCreationTime"
        ohos:width="150vp"
        ohos:height="60vp"
        ohos:bottom_margin="3vp"
        ohos:left_margin="13vp"
        ohos:background_element="$graphic:color_cyan_element"
        ohos:text="getCreationTime"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:getToken"
        ohos:width="150vp"
        ohos:height="60vp"
        ohos:bottom_margin="3vp"
        ohos:left_margin="13vp"
        ohos:background_element="$graphic:color_cyan_element"
        ohos:text="getToken"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:deleteToken"
        ohos:width="150vp"
        ohos:height="60vp"
        ohos:bottom_margin="3vp"
        ohos:left_margin="13vp"
        ohos:background_element="$graphic:color_cyan_element"
        ohos:text="deleteToken"
        ohos:text_size="20fp"/>
    </TableLayout>
</DirectionalLayout>